<?xml version="1.0" encoding="utf-8"?>
<!--
	This file is processed by CMake and used by mkpsxiso to build the CD image.

	NOTE: all paths are relative to the build directory; if you want to include
	a file from the source tree, you'll have to prepend its path with
	C:/psnoobsdk/projects/PSXTests.
-->
<iso_project
	image_name="template.bin"
	cue_sheet="template.cue"
>
	<track type="data">
		<identifiers
			system			="PLAYSTATION"
			volume			="A_BOY_AND_HIS_BALL"
			volume_set		="A_BOY_AND_HIS_BALL"
			publisher		="TURTLESHELL_INTERACTIVE"
			data_preparer	="PSN00BSDK 0.18"
			application		="A_BOY_AND_HIS_BALL"
			copyright		="README.TXT;1"
		/>

		<directory_tree>
			<file name="SYSTEM.CNF"		type="data" source="C:/psnoobsdk/projects/PSXTests/system.cnf" />
			<file name="TEMPLATE.EXE"	type="data" source="template.exe" />
			<file name="TEMPLATE.MAP"	type="data" source="template.map" />
			<file name="Q.TIM"		type="data" source="TILE1.tim" />
			<file name="LVL.BAL"		type="data" source="level.bal" />
			<dummy sectors="1024"/>
		</directory_tree>
	</track>

	<!--<track type="audio" source="track2.wav" />-->
</iso_project>
